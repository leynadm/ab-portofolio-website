---
export interface Props {
	tags?: string[];
}

const { tags } = Astro.props;
---

{
	tags && (
		<div class="mt-2 flex flex-row flex-wrap justify-between bg-black bg-opacity-5 rounded-sm w-full p-1">
			{tags.map((tag) => (
				<span class="inline-block rounded py-2 text-xs text-black  lg:py-1">#{tag}</span>
			))}
		</div>
	)
}
