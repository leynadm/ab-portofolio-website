---
import projectImage from '@assets/images/project.png';
import Tags from '@components/ui/Tags.astro';
interface Props {
	url?: string;
	alt?: string;
	src?: string;
	title?: string;
	description: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	url = '#',
	alt = 'Project image',
	description = 'Project Description',
	title = 'Project title',
	tags = ['Tags'],
	src = 'Project image source',
} = Astro.props;
---

<section class="w-full p-2 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class=" opacity-80 rounded-sm bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url} aria-label="link to project">
			
			<div class="mt-1 p-2">
				<h3 class=" font-semibold text-xl text-black lg:text-2xl pb-2">{title}</h3>
				<div class="relative flex items-end overflow-hidden rounded-sm pb-2">
					<img src={src} height="100px" alt={alt} loading="eager" class="rounded-sm" />
				</div>
				<p class="text-s text-black pb-2">{description}</p>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
