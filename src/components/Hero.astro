---
import heroImage from '@assets/images/hero.png';
import { Image } from '@astrojs/image/components';
import Button from '@components/ui/Button.astro';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-4xl text-black dark:text-white lg:text-5xl">
				Adriana <span class="text-orange">Biarnes</span>
			</h1>
			<h2 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				UI/UX <span class="text-orange">designer</span>
			</h2>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} name="learn more"		
			><a
			href="#about"
			>Learn More</a></Button>
		</div>
	</div>
</section>
