---
import Button from '@components/ui/Button.astro';
import ToggleTheme from '@components/ui/ToggleTheme.astro';
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar';

const menuitems = [
	{
		title: 'About',
		path: '#about',
	},
	{
		title: 'Projects',
		path: '#projects',
	},
	{
		title: 'Contact',
		path: '#contact',
	},
	{
		title: 'Experience',
		path: '#experience',
	},
];
---

<header data-testId="header" class="my-5  flex flex-col items-center justify-between lg:flex-row ">
	<Astronav>
		<div class="flex w-full items-center justify-between lg:w-auto " >
			<!-- 			<Button size={'sm'} name="Download CV">Download CV</Button>
 -->
			<div class="block lg:hidden ml-auto">
				<MenuIcon class="h-6 w-6 text-black dark:text-white" />
			</div>
		</div>
		<MenuItems class="mt-2 hidden w-full lg:mt-0 lg:flex lg:w-auto">
			<ul class="flex flex-col lg:flex-row lg:gap-3 ml-auto">
				{
					menuitems.map((item) => (
						<>
							<li>
								<a
									aria-label="navigation link"
									href={item.path}
									class="flex py-3 text-black hover:text-orange dark:text-white dark:hover:text-orange lg:px-3 justify-around font-bold font-mono"
								>
									{item.title}
								</a>
							</li>
						</>
					))
				}
				<li class="flex justify-around"><ToggleTheme /></li>
			</ul>
		</MenuItems>
	</Astronav>
</header>

  <style>

.navbarMenu {
  transition: transform 0.5s ease, opacity 0.5s ease;
  transform: translateY(-100%); /* Start hidden above */
  opacity: 0; /* Start transparent */
  display: block; /* Ensure it's always block but can be invisible */
}

/* Control visibility with classes */
.navbarMenu.show {
  transform: translateY(0); /* Slide down */
  opacity: 1; /* Fade to visible */
}

.navbarMenu.hide {
  transform: translateY(-100%); /* Slide up */
  opacity: 0; /* Fade to invisible */
  pointer-events: none; /* Prevent interaction when hidden */
}

  </style>