	<style>
		.container {
			opacity: 0;
			filter: blur(5px);
			transform: translateY(25%);
			transition: all 1s;
		}

		.container.show {
			opacity: 1;
			filter: blur(0);
			transform: translateX(0);
		}

		p {
			font-weight: 300;
			font-family: 'Montserrat', sans-serif;
		}
		a {
			color: #6c6d6d;
			text-decoration: none;
			text-transform: uppercase;
			display: block;
			letter-spacing: 0.3em;
			font-size: 0.6em;
			font-weight: 300;

			padding: 0.3rem 1rem;
			margin: 1.9rem 0 0 0;
			float: right;
		}
		a:hover {
			color: white;
			background: #eff4ff;
			border-bottom: 0.35em solid black;
		}

		h6 {
			font-weight: bold;
		}
		#timeline-content {
			margin-top: 50px;
			text-align: center;
		}
		.timeline {
			border-left: 4px solid rgb(94, 101, 116);
			border-bottom-right-radius: 4px;
			border-top-right-radius: 4px;
			margin: 50px auto;
			letter-spacing: 0.5px;
			position: relative;
			line-height: 1.4em;
			font-size: 1.03em;
			padding-left: 50px;
			list-style: none;
			text-align: left;
			font-weight: 100;
			max-width: 80%;
		}
		.timeline h1 {
			letter-spacing: 1.5px;
			font-weight: 100;
			font-size: 1.4em;
		}
		.timeline h2,
		.timeline h3 {
			letter-spacing: 1.5px;
			font-weight: 400;
			font-size: 1.4em;
		}
		.timeline .event {
			padding-bottom: 25px;
			margin-bottom: 50px;
			position: relative;
		}
		.timeline .event:last-of-type {
			padding-bottom: 0;
			margin-bottom: 0;
			border: none;
		}
		.timeline .event:before,
		.timeline .event:after {
			position: absolute;
			display: block;
			top: 0;
		}
		.timeline .event:before {
			left: -185px;

			content: attr(data-date);
			text-align: right;
			font-weight: 100;
			font-size: 0.9em;
			min-width: 120px;
		}
		.timeline .event:after {
			box-shadow: 0 0 0 4px #ffffff;
			left: -57.85px;
			background: #313534;
			border-radius: 50%;
			height: 11px;
			width: 11px;
			content: '';
			top: 5px;
		}
	</style>
